'use client';

import { useState, useEffect } from 'react';
import { use } from 'react';
import { useRouter } from 'next/navigation';
import { useSession } from 'next-auth/react';
import { useToast } from '@/hooks/use-toast';
import { Loader2, Upload, Clock, AlertCircle, CheckCircle, Calendar, Users, Home, CreditCard, X, Wallet } from 'lucide-react';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Input } from '@/components/ui/input';
import { Label } from '@/components/ui/label';
import { formatPrice } from '@/lib/utils/helpers';
import Image from 'next/image';
import Script from 'next/script';

interface Booking {
  id: string;
  bookingNumber: string;
  checkInDate: string;
  checkOutDate: string;
  duration: number;
  numberOfGuests: number;
  totalPrice: number;
  status: string;
  paymentDeadline: string;
  paymentProof: string | null;
  room: {
    name: string;
    basePrice: number;
    images: string[];
    property: {
      name: string;
      city: string;
      address: string;
    };
  };
}

export default function PaymentPage({ params }: { params: Promise<{ id: string }> }) {
  const resolvedParams = use(params);
  const router = useRouter();
  const { data: session, status } = useSession();
  const { toast } = useToast();

  const [booking, setBooking] = useState<Booking | null>(null);
  const [isLoading, setIsLoading] = useState(true);
  const [isUploading, setIsUploading] = useState(false);
  const [paymentProof, setPaymentProof] = useState<File | null>(null);
  const [previewUrl, setPreviewUrl] = useState<string | null>(null);
  const [timeRemaining, setTimeRemaining] = useState<string>('');
  const [isProcessingMidtrans, setIsProcessingMidtrans] = useState(false);
  const [snapLoaded, setSnapLoaded] = useState(false);

  useEffect(() => {
    if (status === 'unauthenticated') {
      router.push('/login-user');
    } else if (status === 'authenticated') {
      fetchBooking();
    }
  }, [status, resolvedParams.id]);

  useEffect(() => {
    if (!booking || booking.status !== 'WAITING_PAYMENT') return;

    const timer = setInterval(() => {
      const deadline = new Date(booking.paymentDeadline).getTime();
      const now = Date.now();
      const diff = deadline - now;

      if (diff <= 0) {
        setTimeRemaining('Expired');
        clearInterval(timer);
      } else {
        const minutes = Math.floor((diff / 1000 / 60) % 60);
        const seconds = Math.floor((diff / 1000) % 60);
        setTimeRemaining(`${minutes}m ${seconds}s`);
      }
    }, 1000);

    return () => clearInterval(timer);
  }, [booking]);

  const fetchBooking = async () => {
    try {
      const res = await fetch(`/api/bookings/${resolvedParams.id}`);
      if (!res.ok) throw new Error('Failed to fetch booking');
      
      const data = await res.json();
      setBooking(data.data);
    } catch (error) {
      console.error('Fetch booking error:', error);
      toast({
        title: 'Error',
        description: 'Failed to load booking details',
        variant: 'destructive',
      });
      router.push('/transactions');
    } finally {
      setIsLoading(false);
    }
  };

  const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>) => {
    const file = e.target.files?.[0];
    if (!file) return;

    // Validate file type
    if (!file.type.startsWith('image/')) {
      toast({
        title: 'Invalid File',
        description: 'Please upload an image file',
        variant: 'destructive',
      });
      return;
    }

    // Validate file size (max 5MB)
    if (file.size > 5 * 1024 * 1024) {
      toast({
        title: 'File Too Large',
        description: 'Maximum file size is 5MB',
        variant: 'destructive',
      });
      return;
    }

    setPaymentProof(file);
    
    // Create preview
    const reader = new FileReader();
    reader.onloadend = () => {
      setPreviewUrl(reader.result as string);
    };
    reader.readAsDataURL(file);
  };

  const handleUpload = async () => {
    if (!paymentProof) {
      toast({
        title: 'No File Selected',
        description: 'Please select a payment proof image',
        variant: 'destructive',
      });
      return;
    }

    setIsUploading(true);
    try {
      const formData = new FormData();
      formData.append('file', paymentProof);

      const res = await fetch(`/api/bookings/${resolvedParams.id}/payment`, {
        method: 'POST',
        body: formData,
      });

      const data = await res.json();

      if (!res.ok) {
        throw new Error(data.error || 'Upload failed');
      }

      toast({
        title: 'Success',
        description: 'Payment proof uploaded successfully',
      });

      // Redirect to transactions page
      router.push('/transactions');
    } catch (error: any) {
      console.error('Upload error:', error);
      toast({
        title: 'Upload Failed',
        description: error.message,
        variant: 'destructive',
      });
    } finally {
      setIsUploading(false);
    }
  };

  const handlePayWithMidtrans = async () => {
    if (!snapLoaded) {
      toast({
        title: 'Payment Gateway Loading',
        description: 'Please wait for payment gateway to load',
        variant: 'destructive',
      });
      return;
    }

    setIsProcessingMidtrans(true);
    try {
      // Create Midtrans transaction
      const res = await fetch(`/api/bookings/${resolvedParams.id}/create-payment`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
      });

      const data = await res.json();

      if (!res.ok) {
        console.error('Create payment error:', data);
        const errorMessage = data.details 
          ? `${data.error}\n\nDetails: ${data.details}`
          : data.error || 'Failed to create payment';
        throw new Error(errorMessage);
      }

      // Open Midtrans Snap popup
      // @ts-ignore - Snap is loaded from external script
      window.snap.pay(data.data.token, {
        onSuccess: function(result: any) {
          console.log('Payment success:', result);
          toast({
            title: 'Payment Success',
            description: 'Your payment has been processed successfully',
          });
          router.push('/transactions');
        },
        onPending: function(result: any) {
          console.log('Payment pending:', result);
          toast({
            title: 'Payment Pending',
            description: 'Your payment is being processed',
          });
          router.push('/transactions');
        },
        onError: function(result: any) {
          console.error('Payment error:', result);
          toast({
            title: 'Payment Failed',
            description: 'Payment failed, please try again',
            variant: 'destructive',
          });
        },
        onClose: function() {
          console.log('Payment popup closed');
          toast({
            title: 'Payment Cancelled',
            description: 'You closed the payment window',
            variant: 'destructive',
          });
        },
      });
    } catch (error: any) {
      console.error('Midtrans payment error:', error);
      
      // Check if it's a configuration error
      const isConfigError = error.message.includes('credentials not configured');
      
      toast({
        title: isConfigError ? 'Midtrans Not Configured' : 'Payment Error',
        description: isConfigError 
          ? 'Payment gateway is not set up yet. Please use manual upload instead.'
          : error.message,
        variant: 'destructive',
      });
    } finally {
      setIsProcessingMidtrans(false);
    }
  };

  const removePreview = () => {
    setPaymentProof(null);
    setPreviewUrl(null);
  };

  if (status === 'loading' || isLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gradient-to-br from-slate-50 to-slate-100">
        <Loader2 className="h-12 w-12 animate-spin text-slate-900" />
      </div>
    );
  }

  if (!booking) return null;

  const isExpired = timeRemaining === 'Expired';
  const canUpload = booking.status === 'WAITING_PAYMENT' && !isExpired;

  return (
    <>
      {/* Load Midtrans Snap script */}
      <Script
        src={`https://app.${process.env.NEXT_PUBLIC_MIDTRANS_IS_PRODUCTION === 'true' ? '' : 'sandbox.'}midtrans.com/snap/snap.js`}
        data-client-key={process.env.NEXT_PUBLIC_MIDTRANS_CLIENT_KEY}
        onLoad={() => setSnapLoaded(true)}
        strategy="lazyOnload"
      />
      
            <div className="min-h-screen bg-slate-50 py-8 px-4 sm:px-6 lg:px-8">
        <div className="max-w-7xl mx-auto">
          {/* Header with Back Button */}
          <div className="mb-8">
            <Button
              onClick={() => router.push('/transactions')}
              variant="ghost"
              className="mb-6 hover:bg-slate-100 transition-all duration-200"
            >
              <span>←</span>
              <span className="ml-2">Back to Transactions</span>
            </Button>
          </div>

          <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
            {/* Left Column - Order Summary */}
            <div className="space-y-6">
              {/* Status Alert */}
              {booking.status === 'WAITING_PAYMENT' && (
                <div className={`rounded-2xl p-6 backdrop-blur-lg border-2 transition-all duration-500 animate-in slide-in-from-left-4 ${
                  isExpired 
                    ? 'bg-red-500/10 border-red-500/50 shadow-lg shadow-red-500/20' 
                    : 'bg-amber-500/10 border-amber-500/50 shadow-lg shadow-amber-500/20'
                }`}>
                  <div className="flex items-start gap-4">
                    <div className={`p-3 rounded-full ${isExpired ? 'bg-red-500' : 'bg-amber-500'}`}>
                      <Clock className="h-6 w-6 text-white" />
                    </div>
                    <div className="flex-1">
                      <p className={`font-bold text-xl mb-2 ${isExpired ? 'text-red-700' : 'text-amber-700'}`}>
                        {isExpired ? 'Payment Deadline Expired' : 'Payment Required'}
                      </p>
                      <p className={`text-base ${isExpired ? 'text-red-600' : 'text-amber-600'}`}>
                        {isExpired 
                          ? 'Your booking has been automatically cancelled due to payment timeout.'
                          : `Complete payment within ${timeRemaining} to secure your booking.`
                        }
                      </p>
                    </div>
                  </div>
                </div>
              )}

              {booking.status === 'WAITING_CONFIRMATION' && (
                <div className="rounded-2xl p-6 bg-blue-500/10 backdrop-blur-lg border-2 border-blue-500/50 shadow-lg shadow-blue-500/20 animate-in slide-in-from-left-4">
                  <div className="flex items-start gap-4">
                    <div className="p-3 rounded-full bg-blue-500">
                      <Clock className="h-6 w-6 text-white" />
                    </div>
                    <div>
                      <p className="font-bold text-xl text-blue-700 mb-2">Under Review</p>
                      <p className="text-base text-blue-600">Your payment is being verified by the property owner.</p>
                    </div>
                  </div>
                </div>
              )}

              {booking.status === 'CONFIRMED' && (
                <div className="rounded-2xl p-6 bg-green-500/10 backdrop-blur-lg border-2 border-green-500/50 shadow-lg shadow-green-500/20 animate-in slide-in-from-left-4">
                  <div className="flex items-start gap-4">
                    <div className="p-3 rounded-full bg-green-500">
                      <CheckCircle className="h-6 w-6 text-white" />
                    </div>
                    <div>
                      <p className="font-bold text-xl text-green-700 mb-2">Booking Confirmed</p>
                      <p className="text-base text-green-600">Your booking is confirmed. Get ready for an amazing stay!</p>
                    </div>
                  </div>
                </div>
              )}

              {/* Property Info Card */}
              <div className="bg-white/80 backdrop-blur-lg rounded-3xl overflow-hidden shadow-2xl border border-white/20 transition-all duration-500 hover:shadow-3xl hover:scale-[1.01] animate-in slide-in-from-left-5">
                <div className="relative h-72 w-full overflow-hidden group">
                  {booking.room.images[0] ? (
                    <Image
                      src={booking.room.images[0]}
                      alt={booking.room.name}
                      fill
                      className="object-cover transition-transform duration-700 group-hover:scale-110"
                    />
                  ) : (
                    <div className="w-full h-full bg-gradient-to-br from-slate-200 to-slate-300 flex items-center justify-center">
                      <Home className="h-16 w-16 text-slate-400" />
                    </div>
                  )}
                  <div className="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                  <div className="absolute bottom-0 left-0 right-0 p-6 text-white">
                    <h2 className="text-3xl font-bold mb-1">{booking.room.property.name}</h2>
                    <p className="text-lg opacity-90">{booking.room.property.city}</p>
                  </div>
                </div>
                
                <div className="p-6 space-y-4">
                  <div className="bg-gradient-to-r from-slate-50 to-slate-100 rounded-2xl p-4 border border-slate-200">
                    <p className="text-sm text-slate-500 mb-1">Room Type</p>
                    <p className="font-bold text-2xl text-slate-800">
                      {booking.room.name}
                    </p>
                  </div>
                  
                  <div className="grid grid-cols-2 gap-4">
                    <div className="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-4 border border-blue-200">
                      <p className="text-sm text-slate-500 flex items-center gap-2 mb-2">
                        <Calendar className="h-4 w-4 text-blue-600" />
                        Check-in
                      </p>
                      <p className="font-bold text-lg text-slate-800">
                        {new Date(booking.checkInDate).toLocaleDateString('id-ID', { 
                          day: 'numeric', 
                          month: 'short', 
                          year: 'numeric' 
                        })}
                      </p>
                    </div>
                    <div className="bg-gradient-to-br from-slate-50 to-slate-100 rounded-xl p-4 border border-slate-200">
                      <p className="text-sm text-slate-500 flex items-center gap-2 mb-2">
                        <Calendar className="h-4 w-4 text-slate-600" />
                        Check-out
                      </p>
                      <p className="font-bold text-lg text-slate-800">
                        {new Date(booking.checkOutDate).toLocaleDateString('id-ID', { 
                          day: 'numeric', 
                          month: 'short', 
                          year: 'numeric' 
                        })}
                      </p>
                    </div>
                  </div>
                  
                  <div className="bg-gradient-to-r from-green-50 to-green-100 rounded-xl p-4 border border-green-200">
                    <p className="text-sm text-slate-500 flex items-center gap-2 mb-2">
                      <Users className="h-4 w-4 text-green-600" />
                      Guest Details
                    </p>
                    <p className="font-bold text-lg text-slate-800">
                      {booking.numberOfGuests} {booking.numberOfGuests > 1 ? 'guests' : 'guest'} • {booking.duration} {booking.duration > 1 ? 'nights' : 'night'}
                    </p>
                  </div>
                </div>
              </div>

              {/* Midtrans Payment Section */}
              {canUpload && (
                <div className="bg-white/80 backdrop-blur-lg rounded-3xl overflow-hidden shadow-2xl border border-white/20 transition-all duration-500 hover:shadow-3xl animate-in slide-in-from-left-6">
                  <div className="bg-gradient-to-r from-green-600 via-green-500 to-green-600 p-8 relative overflow-hidden">
                    <div className="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
                    <div className="relative">
                      <div className="flex items-center gap-3 mb-3">
                        <div className="p-3 bg-white/20 backdrop-blur-sm rounded-xl">
                          <Wallet className="h-7 w-7 text-white" />
                        </div>
                        <div>
                          <h3 className="text-3xl font-bold text-white">Pay with Midtrans</h3>
                          <p className="text-emerald-50 text-base">Fast, secure, and convenient</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div className="p-8 space-y-6">
                    <div className="bg-gradient-to-r from-emerald-50 to-teal-50 rounded-2xl p-6 border border-emerald-100">
                      <h4 className="font-bold text-emerald-900 mb-4 text-lg flex items-center gap-2">
                        <CheckCircle className="h-6 w-6 text-emerald-600" />
                        Why Choose Midtrans?
                      </h4>
                      <div className="grid grid-cols-2 gap-3">
                        <div className="flex items-center gap-2 text-emerald-700">
                          <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                          <span className="text-sm font-medium">Secure Gateway</span>
                        </div>
                        <div className="flex items-center gap-2 text-emerald-700">
                          <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                          <span className="text-sm font-medium">Multiple Methods</span>
                        </div>
                        <div className="flex items-center gap-2 text-emerald-700">
                          <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                          <span className="text-sm font-medium">Instant Confirmation</span>
                        </div>
                        <div className="flex items-center gap-2 text-emerald-700">
                          <div className="w-2 h-2 bg-emerald-500 rounded-full"></div>
                          <span className="text-sm font-medium">No Manual Upload</span>
                        </div>
                      </div>
                    </div>
                    
                    <Button
                      onClick={handlePayWithMidtrans}
                      disabled={isProcessingMidtrans || !snapLoaded}
                      className="w-full h-16 text-xl font-bold bg-gradient-to-r from-emerald-500 via-green-500 to-teal-500 hover:from-emerald-600 hover:via-green-600 hover:to-teal-600 shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
                    >
                      {isProcessingMidtrans ? (
                        <>
                          <Loader2 className="mr-3 h-6 w-6 animate-spin" />
                          Processing Payment...
                        </>
                      ) : !snapLoaded ? (
                        <>
                          <Loader2 className="mr-3 h-6 w-6 animate-spin" />
                          Loading Payment Gateway...
                        </>
                      ) : (
                        <>
                          <CreditCard className="mr-3 h-6 w-6" />
                          Pay Now - {formatPrice(booking.totalPrice)}
                        </>
                      )}
                    </Button>
                  </div>
                </div>
              )}

              {/* Divider */}
              {canUpload && (
                <div className="relative py-6 animate-in fade-in duration-1000">
                  <div className="absolute inset-0 flex items-center">
                    <div className="w-full border-t-2 border-dashed border-slate-300"></div>
                  </div>
                  <div className="relative flex justify-center">
                    <span className="px-6 py-2 bg-white rounded-full text-slate-500 font-bold text-sm shadow-md border border-slate-200">
                      OR UPLOAD MANUALLY
                    </span>
                  </div>
                </div>
              )}

              {/* Upload Section */}
              {canUpload && (
                <div className="bg-white/80 backdrop-blur-lg rounded-3xl overflow-hidden shadow-2xl border border-white/20 transition-all duration-500 hover:shadow-3xl animate-in slide-in-from-left-7">
                  <div className="bg-gradient-to-r from-slate-800 via-slate-700 to-slate-800 p-8 relative overflow-hidden">
                    <div className="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
                    <div className="relative">
                      <div className="flex items-center gap-3 mb-3">
                        <div className="p-3 bg-white/20 backdrop-blur-sm rounded-xl">
                          <Upload className="h-7 w-7 text-white" />
                        </div>
                        <div>
                          <h3 className="text-3xl font-bold text-white">Manual Upload</h3>
                          <p className="text-slate-200 text-base">Bank Transfer Payment Proof</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div className="p-8 space-y-6">
                    <div className="space-y-3">
                      <Label htmlFor="payment-proof" className="text-lg font-bold text-slate-800 flex items-center gap-2">
                        <CreditCard className="h-5 w-5 text-indigo-600" />
                        Payment Receipt Image
                      </Label>
                      <div className="relative">
                        <Input
                          id="payment-proof"
                          type="file"
                          accept="image/*"
                          onChange={handleFileChange}
                          disabled={isUploading}
                          className="h-14 cursor-pointer text-base border-2 border-slate-200 hover:border-indigo-400 transition-colors duration-300 file:mr-4 file:py-3 file:px-6 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100"
                        />
                      </div>
                      <p className="text-sm text-slate-500 flex items-center gap-2">
                        <span className="inline-block w-2 h-2 bg-indigo-500 rounded-full"></span>
                        Supported: JPG, PNG, JPEG • Max 5MB
                      </p>
                    </div>

                    {previewUrl && (
                      <div className="relative group animate-in fade-in zoom-in duration-500">
                        <div className="relative w-full h-72 rounded-2xl overflow-hidden border-2 border-indigo-200 shadow-lg">
                          <Image
                            src={previewUrl}
                            alt="Payment proof preview"
                            fill
                            className="object-contain bg-gradient-to-br from-slate-50 to-slate-100"
                          />
                        </div>
                        <Button
                          onClick={removePreview}
                          variant="destructive"
                          size="sm"
                          className="absolute top-3 right-3 rounded-full h-10 w-10 p-0 shadow-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                        >
                          <X className="h-5 w-5" />
                        </Button>
                        <div className="absolute bottom-3 left-3 bg-black/60 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-medium">
                          ✓ Preview Ready
                        </div>
                      </div>
                    )}

                    <Button
                      onClick={handleUpload}
                      disabled={!paymentProof || isUploading}
                      className="w-full bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 hover:from-indigo-600 hover:via-purple-600 hover:to-pink-600 text-white h-16 text-xl font-bold shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100"
                    >
                      {isUploading ? (
                        <>
                          <Loader2 className="mr-3 h-6 w-6 animate-spin" />
                          Uploading Payment Proof...
                        </>
                      ) : (
                        <>
                          <Upload className="mr-3 h-6 w-6" />
                          Submit Payment Proof
                        </>
                      )}
                    </Button>
                  </div>
                </div>
              )}

              {/* Existing Payment Proof */}
              {booking.paymentProof && (
                <div className="bg-white/80 backdrop-blur-lg rounded-3xl overflow-hidden shadow-2xl border border-white/20 animate-in slide-in-from-left-8">
                  <div className="bg-gradient-to-r from-blue-600 to-cyan-600 p-6">
                    <h3 className="text-2xl font-bold text-white flex items-center gap-2">
                      <CheckCircle className="h-7 w-7" />
                      Uploaded Payment Proof
                    </h3>
                  </div>
                  <div className="p-8">
                    <div className="relative w-full h-96 rounded-2xl overflow-hidden border-2 border-blue-200 shadow-lg">
                      <Image
                        src={booking.paymentProof}
                        alt="Payment proof"
                        fill
                        className="object-contain bg-gradient-to-br from-slate-50 to-slate-100"
                      />
                    </div>
                  </div>
                </div>
              )}
            </div>

            {/* Right Column - Price Summary */}
            <div className="lg:col-span-1">
              <div className="sticky top-8 animate-in slide-in-from-right-4 duration-700">
                <div className="bg-white/80 backdrop-blur-lg rounded-3xl overflow-hidden shadow-2xl border border-white/20">
                  <div className="bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 p-6 relative overflow-hidden">
                    <div className="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
                    <div className="relative flex items-center gap-3">
                      <div className="p-3 bg-white/20 backdrop-blur-sm rounded-xl">
                        <CreditCard className="h-6 w-6 text-white" />
                      </div>
                      <h3 className="text-2xl font-bold text-white">Payment Summary</h3>
                    </div>
                  </div>
                  
                  <div className="p-6 space-y-5">
                    <div className="bg-gradient-to-r from-slate-50 to-slate-100 rounded-xl p-4 border border-slate-200">
                      <p className="text-xs text-slate-500 mb-1 uppercase tracking-wider">Booking Number</p>
                      <p className="font-bold text-lg text-slate-900 font-mono">{booking.bookingNumber}</p>
                    </div>
                    
                    <div className="space-y-3">
                      <div className="flex items-center justify-between py-2 border-b border-slate-200">
                        <span className="text-slate-600">Room Price</span>
                        <span className="font-semibold text-slate-900">{formatPrice(booking.room.basePrice)}</span>
                      </div>
                      <div className="flex items-center justify-between py-2 border-b border-slate-200">
                        <span className="text-slate-600">Duration</span>
                        <span className="font-semibold text-slate-900">{booking.duration} night{booking.duration > 1 ? 's' : ''}</span>
                      </div>
                    </div>
                    
                    <div className="bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 rounded-2xl p-5 border-2 border-indigo-200">
                      <p className="text-sm text-slate-600 mb-2 uppercase tracking-wide font-medium">Total Amount</p>
                      <p className="font-bold text-4xl bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 bg-clip-text text-transparent">
                        {formatPrice(booking.totalPrice)}
                      </p>
                    </div>
                    
                    {canUpload && timeRemaining && (
                      <div className="bg-gradient-to-r from-red-50 to-orange-50 rounded-xl p-4 border-2 border-red-200">
                        <div className="flex items-center gap-3">
                          <Clock className="h-5 w-5 text-red-600 flex-shrink-0 animate-pulse" />
                          <div>
                            <p className="text-xs text-red-600 font-semibold uppercase tracking-wider mb-1">Time Remaining</p>
                            <p className="font-bold text-2xl text-red-700">{timeRemaining}</p>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                </div>
                
                {/* Security Badge */}
                <div className="mt-6 bg-white/60 backdrop-blur-sm rounded-2xl p-4 border border-white/20 shadow-lg">
                  <div className="flex items-start gap-3">
                    <div className="p-2 bg-green-100 rounded-lg">
                      <CheckCircle className="h-5 w-5 text-green-600" />
                    </div>
                    <div>
                      <p className="font-bold text-slate-800 text-sm mb-1">Secure Payment</p>
                      <p className="text-xs text-slate-600">Your payment information is protected with industry-standard encryption</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>
      </div>
      </div>
    </>
  );
}
